<div class="container jumbotron">
    <h3 class="mb-5">Uploading images</h3>

    <%# Silly way of authentication in order to persist some faces with related user data on Azure Face Services %>
    <!--Authentication Box -->
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="basic-addon">Who are you? </span>
        </div>
        <input type="text" class="form-control" id="usernameInput" name="username" placeholder="Username" aria-label="Username" aria-describedby="basic-addon">
    </div>
    <div class="alert alert-info" role="alert">
        A simple way of authentication in order to help the system recognize faces you've already submitted and supplied with a name
        <span class="font-weight-bold">(Optional)</span>
    </div>
    <!--END of Authentication Box -->

    <!-- Input file box -->
    <div class="input- mt-4">
        <div class="custom-file">
            <input type="file" class="custom-file-input" accept="image/png, image/jpeg" id="groupImages" multiple>
            <label class="custom-file-label" for="groupImages">Choose file</label>
        </div>
    </div>
    <!-- END of Input file box -->

    <!-- Password box -->
    <div class="input-group mt-2">
        <input type="password" class="form-control" id="pwd" value="" placeholder="Secret password" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
    </div>
    <!--Show just in case the user will try to upload without it-->
    <p id="pwdAlert" class="mt-1 text-center text-danger invisible">Password is required!</p>
    <!-- End of Password box -->

    <!-- Upload button box -->
    <div class="row text-center">
        <div class="col-2"></div>
        <div class="col-8">
            <button id="uploadBtn" class="btn btn-danger btn-lg mt-2" type="button"
                    onclick="upload(document.getElementById('pwd').value,
                                    document.getElementById('usernameInput').value)">
                Upload
            </button>
        </div>
        <div class="col-2"></div>
    </div>
    <!-- End of Upload button box -->
</div>

<!-- Progress bar box -->
<!-- Show just during uploading phase to give a silly feedback to the user -->
<div class="row text-center">
    <div class="col-3"></div>
    <div class="col-6 text-center" id="progressBar"></div>
    <div class="col-3"></div>
</div>
<!-- END of Progress bar box -->