<h3 class="text-center">Description</h3>

<h5>Generic tags</h5>
<% for(tag of imgAnnotated.cogniAPI.description.generic_tags){ %>
    <div class="row mt-1 mb-5">
        <button class="btn-warning m-1" disabled style="cursor:pointer"><%= tag%></button>
    </div>
<% }%>
<hr />

<h5 class="mt-4">Azure Categories</h5>
<% for(cat of imgAnnotated.cogniAPI.description.categories){ %>
    <div class="mt-3 mb-3">
        <%=cat.name%>
        <div class="progress">
            <div class="progress-bar bg-warning text-dark font-weight-bold" role="progressbar" style="width: <%= Math.floor(cat.confidence*100)%>%>%;"
                 aria-valuenow="<%= Math.floor(cat.confidence*100)%>" aria-valuemin="0" aria-valuemax="100">
                <%= Math.floor(cat.confidence*100)%>%
            </div>
        </div>
    </div>
<% }%>
<hr />

<h5 class="mt-4">Captions</h5>
<% for(caption of imgAnnotated.cogniAPI.description.captions){ %>
    <div class="mt-3 mb-3">
        <%=caption.text%>
        <div class="progress">
            <div class="progress-bar bg-warning text-dark font-weight-bold" role="progressbar" style="width: <%= Math.floor(caption.confidence*100)%>%>%;"
                 aria-valuenow="<%= Math.floor(caption.confidence*100)%>" aria-valuemin="0" aria-valuemax="100">
                <%= Math.floor(caption.confidence*100)%>%
            </div>
        </div>
    </div>
<% }%>